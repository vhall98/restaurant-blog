<h1>Register for new account</h1>

<%= form_tag :action => 'newuser' do %> 
	<p> <b>User ID</b><br /> <%= text_field_tag :userid %> </p>
	<p> <b>Full Name</b><br /> <%= text_field_tag :fullname %> </p>

	<p> <b>Password</b><br /> <%= password_field_tag :password %> </p>
	<p> <b>E-mail</b><br /> <%= text_field_tag :email %> </p>

	<p> <%= submit_tag "Create Account" %> </p> 
<% end %>